<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/tx 
        http://www.springframework.org/schema/tx/spring-tx-4.0.xsd"
        >
        
		<!-- 添加注解驱动 -->
		<mvc:annotation-driven />
		
		<!-- 默认扫描的包路径 -->
		<context:component-scan base-package="c.controller" />
		<context:component-scan base-package="s.service" />
		<context:component-scan base-package="u.utils" />
	
	 	<context:component-scan base-package="com.suning.bdsp" use-default-filters="false"> 
	         <context:include-filter type="annotation" expression="org.springframework.stereotype.Component"/>
	         <context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
	         <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/> 
	    </context:component-scan> 
	
<!-- 	<context:annotation-config /> -->

<!-- 	加载配置文件，这里的，可以在其他配置文件中用${key}替换指定的properties文件中的值 -->
		<bean id="propertyConfig"
			class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
			<property name="locations">
			    <list>
				     <value>classpath:conf/property/main-setting.properties</value>
				</list>
			</property>
		</bean>
	
		<import resource="classpath:conf/spring/spring-res.xml"/>

<!--  	这里的是正常的配置信息，声明为bean，方便在程序里使用。 -->
      	<bean id="propertiesService" class="u.utils.PropertiesUtil"> 
 	        <property name="filePaths"> 
 			    <list> 
 				     <value>classpath:conf/property/main-setting.properties</value> 
 				</list> 
 			</property> 
 	    </bean>  
    
</beans>