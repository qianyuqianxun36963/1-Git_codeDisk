<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<!-- 	<class name="entitys.User" table="user"> -->
    <class name="z.entity.po.User" table="user">
		<id name="userid" column="userid"/> <!--由于字段名与属性名相同， 这里culumn=“id”可以省略 下面属性也是-->
		<property name="username" />
    </class>
    
    <class name="z.entity.po.Org" table="org" catalog="my_web" optimistic-lock="version">
        <id name="orgid" type="int">
            <column name="orgid" />
            <generator class="assigned" />
        </id>
        <property name="parentorgid" type="java.lang.Integer">
            <column name="parentorgid" />
        </property>
        <property name="level" type="java.lang.Integer">
            <column name="level" />
        </property>
        <property name="orgname" type="string">
            <column name="orgname" length="100" />
        </property>
        <property name="manager" type="string">
            <column name="manager" length="100" />
        </property>
        <property name="linkman" type="string">
            <column name="linkman" length="20" />
        </property>
        <property name="linktel" type="string">
            <column name="linktel" length="20" />
        </property>
    </class>
    
    <class name="z.entity.po.Role" table="role" catalog="my_web" optimistic-lock="version">
        <id name="roleid" type="int">
            <column name="roleid" />
            <generator class="assigned" />
        </id>
        <property name="rolename" type="string">
            <column name="rolename" />
        </property>
        <property name="rolecode" type="string">
            <column name="rolecode" length="20" />
        </property>
    </class>
    
    <class name="z.entity.po.Func" table="func" catalog="my_web" optimistic-lock="version">
        <id name="funcid" type="int">
            <column name="funcid" />
            <generator class="assigned" />
        </id>
        <property name="funcname" type="string">
            <column name="funcname" />
        </property>
        <property name="access" type="string">
            <column name="access" length="20" />
        </property>
    </class>
    
    <class name="z.entity.po.RoleFunc" table="rolefunc" catalog="my_web" optimistic-lock="version">
        <id name="rolefuncid" type="int">
            <column name="rolefuncid" />
            <generator class="assigned" />
        </id>
        <property name="funcid" type="int">
            <column name="funcid" />
        </property>
        <property name="roleid" type="int">
            <column name="roleid" />
        </property>
    </class>
    
    <class name="z.entity.po.RoleUser" table="roleuser" catalog="my_web" optimistic-lock="version">
        <id name="roleuserid" type="int">
            <column name="roleuserid" />
            <generator class="assigned" />
        </id>
        <property name="userid" type="int">
            <column name="userid" />
        </property>
        <property name="roleid" type="int">
            <column name="roleid" />
        </property>
    </class>
    
    <class name="z.entity.po.OrgUser" table="orguser" catalog="my_web" optimistic-lock="version">
        <id name="orguserid" type="int">
            <column name="orguserid" />
            <generator class="assigned" />
        </id>
        <property name="userid" type="int">
            <column name="userid" />
        </property>
        <property name="orgid" type="int">
            <column name="orgid" />
        </property>
    </class>
	
</hibernate-mapping>